<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.events.CreateEventActivity">

    <EditText
        android:id="@+id/etEventName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="32dp"
        android:hint="Event Name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etEventDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Event Description"
        app:layout_constraintTop_toBottomOf="@+id/etEventName"
        app:layout_constraintStart_toStartOf="@+id/etEventName"
        app:layout_constraintEnd_toEndOf="@+id/etEventName" />

    <EditText
        android:id="@+id/etEventDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Event Date (YYYY-MM-DD)"
        app:layout_constraintTop_toBottomOf="@+id/etEventDescription"
        app:layout_constraintStart_toStartOf="@+id/etEventDescription"
        app:layout_constraintEnd_toEndOf="@+id/etEventDescription" />

    <Button
        android:id="@+id/btnCreateEvent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Create Event"
        app:layout_constraintTop_toBottomOf="@+id/etEventDate"
        app:layout_constraintStart_toStartOf="@+id/etEventDate"
        app:layout_constraintEnd_toEndOf="@+id/etEventDate" />

</androidx.constraintlayout.widget.ConstraintLayout>