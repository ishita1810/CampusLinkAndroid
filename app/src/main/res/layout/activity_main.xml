<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.MainActivity">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Campus Link"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <Button
        android:id="@+id/btnAttendance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="Attendance"
        app:layout_constraintTop_toBottomOf="@+id/tvWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <Button
        android:id="@+id/btnFees"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fee Tracking"
        app:layout_constraintTop_toBottomOf="@+id/btnAttendance"
        app:layout_constraintStart_toStartOf="@+id/btnAttendance"
        app:layout_constraintEnd_toEndOf="@+id/btnAttendance"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnEvents"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Event Scheduling"
        app:layout_constraintTop_toBottomOf="@+id/btnFees"
        app:layout_constraintStart_toStartOf="@+id/btnFees"
        app:layout_constraintEnd_toEndOf="@+id/btnFees"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>