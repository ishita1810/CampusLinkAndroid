<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.campuslink">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".CampusLinkApplication"
        android:allowBackup="true"
        android:label="Campus Link"
        android:theme="@style/Theme.CampusLink">
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.home.MainActivity" />
        <activity android:name=".ui.attendance.AttendanceActivity" />
        <activity android:name=".ui.fees.FeesActivity" />
        <activity android:name=".ui.events.EventsActivity" />
        <activity android:name=".ui.events.CreateEventActivity" />
        <activity android:name=".ui.auth.RegisterActivity" />
        <activity android:name=".ui.admin.AdminActivity" />
        <activity android:name=".ui.faculty.FacultyActivity" />
    </application>
</manifest>
